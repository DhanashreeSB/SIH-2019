<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent_layout_recycler"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="7dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/leftView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/airline"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/airplane4"/>

         <TextView
             android:id="@+id/flightid"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="SI 345"
             android:textStyle="bold"
             android:textSize="12sp"
             android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/leftView"
            android:orientation="horizontal"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_fromtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:15"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/textview_fromcity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/textview_totaltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h 10m"
                    android:textSize="15dp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:src="@drawable/arraw_forward"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_totime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:35"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/textview_tocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOM"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/textview_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 stop"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>


            <TextView
                android:id="@+id/textview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.2,500"
                android:padding="7dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:gravity="right"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>

